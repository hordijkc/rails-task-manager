<h1>Add a task</h1>

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
    <% if @task.id %>
  </div>

   <div class="form-group">
    <%= f.label :completed %>
    <%= f.check_box :completed, class: 'form-control' %>
    <% end %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<%= link_to "tasks", tasks_path %>
